#include "stdafx.h"
#include "iostream"
using namespace std;

int main()
{
	setlocale(LC_ALL, "ru");
	int n,x;
	bool c=true;
	cout << "Введите размер массива (N): ";
	cin >> n;
	cout << "Заполните массив целыми числами: ";
	int* m = new int[n];
	for(int i = 0;i < n;i++) {
		cin >> m[i];
	}
	x = m[1] - m[0];
	for (int i = 1;i < n;i++) {
		if (m[i] - m[i-1] != x) {
			c = false;
		}
	}
	x = (c) ? x : 0;
	cout << x << endl;
	delete[] m;
	return 0;
}
