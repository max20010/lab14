#include "stdafx.h"
#include "iostream"
using namespace std;

int main()
{
	setlocale(LC_ALL, "ru");
	int n,k,l,x;
	float a,s=0;
	cout << "Введите размер массива (N): ";
	cin >> n;
	cout << "Заполните массив целыми числами: ";
	int* m = new int[n];
	for(int i = 0;i < n;i++) {
		cin >> m[i];
	}
	cout << "Введите два целых числа K и L: ";
	cin >> k>>l;
	l--;
	k--;
	x = l - k+1;
	for (int i=k;i<= l;i++) {
		s += m[i];
	}
	a = s / x;
	cout << a << endl;
	delete[] m;
	return 0;
}
